{% import "components/_icons.njk" as icons %}

{% macro buildOwn() %}
    {# Graphic #}
    <div class="absolute flex w:100p h:100p h:auto ratio:1-1 flex align-items:center justify-content:center" aria-hidden="true">
        <img src="/assets/images/home/build-own-frame.svg" width="364" height="364" alt class="absolute w:100p flex ratio:1-1">
        <img src="/assets/images/home/build-own.svg" width="364" height="364" alt class="absolute w:100p flex ratio:1-1 animate:build-own-float transform blur:fix" style="transform: translate3d(0,6px,0) rotate(-2deg);">
    </div>
{% endmacro %}

{% macro landExpand() %}
    {# Graphic #}
    <div class="absolute flex w:100p h:100p ratio:1-1 flex align-items:center justify-content:center" aria-hidden="true">
        {# Lines Left #}
        <div class="relative flex flex:col w:100p gap:16 mask:fade-out-x">
            <div class="relative border-t:1  border-opacity:20">
                <div class="absolute left:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-right-2"></div>
            </div>
            <div class="relative border-t:1  border-opacity:20">
                <div class="absolute left:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-right"></div>
            </div>
            <div class="relative border-t:1  border-opacity:20">
                <div class="absolute left:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-right-2"></div>
            </div>
        </div>
        {# Center #}
        <div class="relative flex flex:col align-items:center justify-content:center h:100p">
            {# Expanders #}
            <div class="absolute w:144 h:144 radius:100p animate:build-own-pulse opacity:0" style="background: radial-gradient(50% 50% at 50% 50%, rgba(var(--white), 0) 80%, rgba(var(--white), 0.02) 90%, rgba(var(--white), 0) 100%)"></div>
            {# Lines Top #}
            <div class="relative flex h:100p gap:16 mask:fade-out-y">
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute top:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-down-2"></div>
                </div>
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute top:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-down"></div>
                </div>
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute top:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-down-2"></div>
                </div>
            </div>
            {# Chip #}
            <div class="flex-shrink:0 relative flex align-items:center justify-content:center">
                {# Gradients Outer #}
                <div class="absolute top:0 left:0 w:100p h:100p flex align-items:center justify-content:center animate:rotate-clockwise-20">
                    <div class="w:192 h:192 absolute top:n64 left:n64 bg:radial-teal-i opacity:20"></div>
                    <div class="w:192 h:192 absolute top:n64 right:n64 bg:radial-teal-i opacity:20"></div>
                    <div class="w:192 h:192 absolute left:n112 bg:radial-blue-i opacity:10"></div>
                    <div class="w:192 h:192 absolute right:n112 bg:radial-blue-i opacity:10"></div>
                    <div class="w:192 h:192 absolute bottom:n72 left:n64 bg:radial-purple-i opacity:10"></div>
                    <div class="w:192 h:192 absolute bottom:n72 right:n64 bg:radial-purple-i opacity:10"></div>
                </div>
                {# Inner #}
                <div class="relative w:144 h:144 bg:white bg-opacity:6 radius:xl p:8 overflow:hidden" style="box-shadow: 0px 0px 24px 4px rgba(0, 0, 0, 0.35);">
                    <div class="absolute w:100p h:100p top:0 left:0 bg:fade-up opacity:30"></div>
                    <div class="absolute w:100p h:72 top:0 left:0 bg:fade-up opacity:60"></div>
                    <div class="relative w:100p h:100p flex align-items:center justify-content:center bg:sheet-6-i radius:md overflow:hidden" style="box-shadow: 0px 0px 8px 4px rgba(0, 0, 0, 0.35);">
                        <div class="absolute w:100p h:100p top:0 left:0 bg:fade-up opacity:10"></div>
                        <div class="absolute top:0 left:0 w:100p h:100p opacity:20" style="background-image: url('/assets/images/utility/sparkle-24.svg'); background-size: 0.5rem 0.5rem;"></div>
                        <div class="absolute top:n32 left:n32 w:192 h:192" style="background: radial-gradient(50% 50% at 50% 50%, rgba(var(--sheet-6-i), 1) 0%, rgba(var(--sheet-6-i), 0.8) 30%, rgba(var(--sheet-6-i), 0) 100%)"></div>
                        <div class="absolute w:144 h:144 radius:100p animate:build-own-pulse-reverse opacity:0" style="background: radial-gradient(50% 50% at 50% 50%, rgba(var(--white), 0) 50%, rgba(var(--white), 0.02) 75%, rgba(var(--white), 0) 100%)"></div>
                        <div class="mask:fade-out-b">
                            {{ icons.check('relative w:32') }}
                        </div>
                    </div>
                </div>
            </div>
            {# Lines Bottom #}
            <div class="relative flex h:100p gap:16 mask:fade-out-y">
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute bottom:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-up-2"></div>
                </div>
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute bottom:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-up"></div>
                </div>
                <div class="relative border-l:1 border-opacity:20">
                    <div class="absolute bottom:n24 left:n1 h:24 border-l:1 border:white mask:fade-out-y animate:build-own-dash-up-2"></div>
                </div>
            </div>
        </div>
        {# Lines Right #}
        <div class="relative flex flex:col w:100p gap:16 mask:fade-out-x">
            <div class="relative border-t:1 border-opacity:20">
                <div class="absolute right:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-left-2"></div>
            </div>
            <div class="relative border-t:1 border-opacity:20">
                <div class="absolute right:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-left"></div>
            </div>
            <div class="relative border-t:1 border-opacity:20">
                <div class="absolute right:n24 top:n1 w:24 border-t:1 border:white mask:fade-out-x animate:build-own-dash-left-2"></div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro betterPerfect() %}
    {# Graphic #}
    <div class="absolute flex w:100p h:100p h:auto ratio:1-1 flex align-items:center justify-content:center" aria-hidden="true">
        {# Toggle #}
        <div data-animate-toggle class="flex-shrink:0 relative flex flex:col align-items:center justify-content:center gap:24">
            <div data-animate-toggle-pill class="relative w:160 h:64 bg:sheet-4-i radius:full flex align-items:center " style="background-color: rgba(255,92,119,0.1); box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.04), inset 0 -1px 1px 0 rgba(0, 0, 0, 0.2), inset 0 16px 16px -8px rgba(0,0,0,0.5), inset 0 24px 24px -8px rgba(0,0,0,0.2);">
                <div data-animate-toggle-text-r class="absolute right:24 font:mono font:2xs uppercase tracking:loosest">
                    <div class="absolute filter filter-blur:2xs opacity:50 animation:pulse">
                        Pending
                    </div>
                    <div class="gradient-text bg:white bg-opacity:50">
                        Pending
                    </div>
                </div>
                <div data-animate-toggle-text-l class="absolute left:24 font:mono font:2xs uppercase tracking:loosest" style="visibility:hidden; opacity:0;">
                    <div class="absolute filter filter-blur:2xs opacity:50">
                        Shipped
                    </div>
                    <div class="gradient-text bg:white bg-opacity:50">
                        Shipped
                    </div>
                </div>
                {# Knob #}
                <div data-animate-toggle-knob class="absolute h:100p w:auto flex ratio:1-1 bg:sheet-5-i radius:full p:2" style="box-shadow: inset 0 -1px 1px 0 rgba(255,255,255,0.02), inset 0 1px 1px 0 rgba(255,255,255,0.08), inset 0 2px 1px 0 rgba(0,0,0,0.2), 0 16px 16px rgba(0,0,0,0.4);">
                    <div class="absolute top:0 left:0 w:100p h:100p radius:full bg:radial-white opacity:2"></div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}